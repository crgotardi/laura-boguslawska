---
interface Props {
    title?: string
    cols?: 2 | 3 | 4
}

const { title, cols=3 } = Astro.props
---
<section>
    {title && (
        <h2 class="heading">{title}</h2>
    )}

    <div class:list={[
        'p-12',
        'grid',
        'gap-16',
        'mt-16',
        {
            'grid-cols-2': cols === 2,
            'grid-cols-3': cols === 3,
            'grid-cols-4': cols === 4,
        }
    ]}>
        <slot />
    </div>
</section>
<style>
</style>